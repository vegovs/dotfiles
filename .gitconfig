[user]
	name = Vegard Bergsvik Øvstegård
    email = vegovs@gmail.com
	username = vegovs

[core]
    editor = vim 
	excludesfile = /home/pi/.gitignore_global

[web]
	browser = google-chrome

[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = red

[diff]
	tool = vimdiff
[difftool]
	prompt = false
[github]
	user = vegovs

[alias]

    l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	hist = log --all --graph --decorate --oneline

	cm = commit -m
	cma = commit -a
	
	s = status

	co = checkout

	up = rebase

	a = add --all

	pl = pull

	ph = push

    amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend

    br = branch -av

    la = "!git config -l | grep alias | cut -c 7-"

[push]
	default = matching
[credential]
	helper = cache --timeout=1000

[url "https://github.uio.com/"]
	    insteadOf = ghuio:

[url "https://github.com/"]
	    insteadOf = gh:

[url "https://gist.github.com/"]
	    insteadOf = gist:

[url "https://bitbucket.org/"]
	    insteadOf = bb:
